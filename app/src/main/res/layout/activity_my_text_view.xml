<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="15dp"
    android:layout_weight="1"
    android:background="#CC87cefa"
    android:orientation="vertical"
    android:padding="6sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fromcountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="bottom|right|center_horizontal"
            android:text="country"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/to"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="bottom|center_horizontal|center"
            android:text="TO"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tocountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="bottom|left|center_horizontal"
            android:text="Country"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fromdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="bottom|right|center_horizontal|center"
            android:text="date"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/to"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="bottom|center_horizontal|center"
            android:text="TO"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/todate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="bottom|left|center_horizontal|center"
            android:text="date"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>